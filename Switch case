#include<stdio.h>
main()
{
int ch;
    printf("Enter 1 for pizza.\n");
    printf("Enter 2 for Burger. \n");
    printf("Enter 3 for pasta. \n");
    printf("Enter 4 for French Fries. \n");
    printf("Enter 5 for Sandwich.\n");
    printf("Enter the number here- \n");
    scanf("%d",&ch);
    switch(ch)
	{
		case 1:
			printf(" Food item-pizza \n Price-Rs 239");
			break;
		case 2:
			printf(" Food item-Burger \n Price-Rs 129");
			break;
		case 3:
			printf(" Food item-pasta \n Price-Rs 179");
			break;
		case 4:
			printf(" Food item-French Fries \n Price-Rs 99");
			break;
		case 5:
			printf(" Food item-Sandwich \n Price-Rs 149");
			break;	
		default:
			printf("invalid option");
						
			
	}
}
